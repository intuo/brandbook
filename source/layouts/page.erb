<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width">
    <title><%= current_page.data.title || "Intuo Brandbook" %></title>
    <script src="https://use.typekit.net/npz4hwv.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
    <%= favicon_tag "images/favicon.png" %>
    <%= stylesheet_link_tag "http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "jquery/dist/jquery.js" %>
    <%= javascript_include_tag "application" %>
    <%= stylesheet_link_tag "bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.min.css" %>
    <%= javascript_include_tag "bootstrap-switch/dist/js/bootstrap-switch.min.js" %>
    <%= stylesheet_link_tag "quill/dist/quill.snow.css" %>
    <%= javascript_include_tag "quill/dist/quill.min.js" %>
    <%= stylesheet_link_tag "seiyria-bootstrap-slider/dist/css/bootstrap-slider.min.css" %>
    <%= javascript_include_tag "seiyria-bootstrap-slider/dist/bootstrap-slider.min.js" %>
    <%= stylesheet_link_tag "bootstrap-select/dist/css/bootstrap-select.min.css" %>
    <%= javascript_include_tag "bootstrap-select/dist/js/bootstrap-select.min.js" %>
    <%= stylesheet_link_tag "sortable/css/sortable-theme-bootstrap.css" %>
    <%= javascript_include_tag "sortable/js/sortable.min.js" %>
    <%= stylesheet_link_tag "chosen/chosen.min.css" %>
    <%= javascript_include_tag "chosen/chosen.jquery.min.js" %>
  </head>

  <body>
    <%= partial "partials/navigation" %>

    <main class="main" role="main">
      <div class="container">
        <%= yield %>
      </div>
    </main>

    <%= partial "partials/footer" %>
  </body>
</html>
